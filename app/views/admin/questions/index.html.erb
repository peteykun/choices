<h1>List of Questions</h1>
<hr>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Subject</th>
      <th>Type</th>
      <th colspan="3" width="30%">Controls</th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.id %></td>
        <td><%= question.name %></td>
        <td><%= unless question.subject.nil? then question.subject.name else "" end %></td>
        <td><%= if question.question_type == 'multiple_choice' then "Multiple Choice" elsif question.question_type == 'numerical' then "Numerical" else "Unknown" end %></td>
        <td>
          <%= link_to [:admin, question] do %>
          <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span> View
          <% end %>
        </td>
        <td>
          <%= link_to edit_admin_question_path(question) do %>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
          <% end %>
        </td>
        <td>
          <%= link_to [:admin, question], method: :delete, data: { confirm: 'Are you sure?' } do %>
          <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Delete
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @problems, renderer: BootstrapPagination::Rails %>
<br>
<br>

<%= link_to 'New Question', new_admin_question_path, class: 'btn btn-default' %>
