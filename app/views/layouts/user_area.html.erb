<!DOCTYPE html>
<html>
<head>
  <title>Choices</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">Choices</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <% if current_user == nil %>
          <li<%= raw ' class="active"' if controller_name == "sessions" %>>
            <a href="<%= login_path %>">Login <span class="sr-only">(current)</span></a>
          </li>
          <li<%= raw ' class="active"' if controller_name == "users" %>>
            <a href="<%= register_path %>">Register <span class="sr-only">(current)</span></a>
          </li>
          <% else %>
          <li<%= raw ' class="active"' if controller_name == "static_pages" %>>
            <a href="<%= lobby_path %>">Lobby <span class="sr-only">(current)</span></a>
          </li>
          <% if current_user.is_admin %>
          <li>
            <a href="<%= admin_root_path %>" target="_blank">Admin Panel <span class="sr-only">(current)</span></a>
          </li>
          <% end %>
          <li<%= raw ' class="active"' if controller_name == "sessions" %>>
            <a href="<%= logout_path %>">Logout <span class="sr-only">(current)</span></a>
          </li>
          <% end %>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <div class="container">

    <%= yield %>

  </div>

</body>
</html>
